{
    "suites": ["test/*_test.html"],
    "verbose": true,
    "plugins": {
        "istanbub": {
            "dir": "./coverage",
            "reporters": ["text-summary", "lcov"],
            "include": [
                "*.js"
            ],
            "exclude": [],
            "thresholds" : {
            "global": {
                "statements": 82
            }
        }
        },
        "local": {
            "browsers": ["chrome"]
        }
    }
}
